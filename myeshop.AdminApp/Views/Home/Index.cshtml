@using myeShop.ViewModels.Common;
@model PagedResult<myeShop.ViewModels.Catalog.Products.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <div class="hero-wrap js-fullheight" style="background-image: url('../../images/bg_1.jpg'); ">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
                <h3 class="v">Modist - Time to get dress</h3>
                <h3 class="vr">Since - 1985</h3>
                <div class="col-md-11 ftco-animate text-center">
                    <h1>Le Stylist</h1>
                    <h2><span>Wear Your Dress</span></h2>
                </div>
                <div class="mouse">
                    <a href="#" class="mouse-icon">
                        <div class="mouse-wheel"><span class="ion-ios-arrow-down"></span></div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="goto-here"></div>
<br />
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h1 class="big">BRANDS</h1>
                <h2>OUR BRANDS</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-lg-3 ftco-animate">
                <div class="product">
                    <img class="img-fluid" src="~/images/SWE.jpg" alt="Colorlib Template">
                    <h3>SWE</h3>
                </div>
            </div>
            <div class="col-md-3 col-lg-3 ftco-animate">
                <div class="product">
                    <img class="img-fluid" src="~/images/sup_BH.jpg" alt="Colorlib Template">
                    <h3>Bad Rabbits</h3>
                </div>
            </div>
            <div class="col-md-3 col-lg-3 ftco-animate">
                <div class="product">
                    <img class="img-fluid" src="~/images/sup_TSUN.jpg" alt="Colorlib Template">
                    <h3>TSUN</h3>
                </div>
            </div>
            <div class="col-md-3 col-lg-3 ftco-animate">
                <div class="product">
                    <img class="img-fluid" src="~/images/sup_ZUP.jpg" alt="Colorlib Template">
                    <h3>SGZUP</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<br />
@*------------------------------PRODUCT------------------------------*@
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h1 class="big">Products</h1>
                <h2>Our Product</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Items)
            {
                <div class="col-sm col-md-6 col-lg-3 ftco-animate">
                    <div class="product">
                        <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@item.Prod_ID" class="img-prod">

                            <img class="img-fluid" src="~/WebApp/images/@Html.DisplayFor(modelItem => item.ImagePath)" alt="Colorlib Template">
                            <span class="status">30%</span>
                        </a>
                        <div class="text py-3 px-3">
                            <h3><a href="#"> @Html.DisplayFor(modelItem => item.Prod_Name)</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price"><span class="mr-2 price-dc"></span><span class="price-sale">@Html.DisplayFor(modelItem => item.Price)</span></p>
                                </div>
                            </div>
                            <hr>
                            <p class="bottom-area d-flex">
                                <a class="add-to-cart"><span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
@*------------------------------END PRODUCTS------------------------------*@

