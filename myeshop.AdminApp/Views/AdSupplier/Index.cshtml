@using myeShop.ViewModels.Common;
@model PagedResult<myeShop.ViewModels.Catalog.Suppliers.SupplierViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}


<div class="container-fluid">
    <h1 class="mt-4">Quản lý thương hiệu</h1>
    <a class="btn btn-primary" asp-area="" asp-controller="AdSupplier" asp-action="Create">Thêm thương hiệu</a>
    <hr />
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Danh sách thương hiệu</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Thương hiệu</th>
                            <th>Gmail</th>
                            <th>Địa chỉ</th>
                            <th>SĐT</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã</th>
                            <th>Thương hiệu</th>
                            <th>Gmail</th>
                            <th>Địa chỉ</th>
                            <th>SĐT</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @*------------------Database------------------*@
                        @foreach (var item in Model.Items)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Supplier_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Supplier_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.Supplier_ID }) |
                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Supplier_ID }) |
                                </td>
                            </tr>
                            }
                        @*------------------End data------------------*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>